{
  "name": "client-apps",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "start": "npx run-p watch-packages start-all",
    "start-all": "lerna run start --stream ",
    "build-packages": "lerna run build --ignore client-main --ignore client-admin --no-bail",
    "watch-packages": "lerna run watch --ignore client-main --ignore client-admin",
    "build": "lerna run build --ignore client-admin --ignore packages",
    "build-production": "yarn install && yarn bootstrap && yarn build-packages && yarn build"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.5",
    "@types/lodash": "^4.14.120",
    "@types/luxon": "^1.11.0",
    "@types/node": "^11.9.0",
    "@types/query-string": "^6.2.0",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.0",
    "@types/react-google-recaptcha": "^0.10.0",
    "@types/react-helmet": "^5.0.8",
    "@types/react-onclickoutside": "^6.7.0",
    "@types/react-router": "^4.4.3",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-scroll": "^1.5.4",
    "@types/react-select": "^2.0.11",
    "@types/react-share": "^2.1.1",
    "@types/react-slick": "^0.23.3",
    "@types/ws": "^6.0.1",
    "file-loader": "^3.0.1",
    "lerna": "^3.11.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "shx": "^0.3.2",
    "style-loader": "^0.23.1",
    "svg-inline-loader": "^0.8.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
